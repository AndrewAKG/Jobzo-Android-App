<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrew.jobzo_android_app.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="398dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/TextMessage"
                app:srcCompat="@android:drawable/ic_menu_send" />

            <EditText
                android:id="@+id/TextMessage"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="2dp"
                android:ems="10"
                android:hint="type your message here..."
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toStartOf="@+id/send"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="2dp" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">

            <TextView
                android:id="@+id/editText2"
                android:layout_width="184dp"
                android:layout_height="39dp"
                android:layout_marginEnd="2dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Switch To"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/jobs"
                tools:layout_editor_absoluteY="3dp" />

            <ImageButton
                android:id="@+id/jobs"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintEnd_toStartOf="@+id/courses"
                app:layout_constraintStart_toEndOf="@+id/editText2"
                app:srcCompat="@android:drawable/btn_star_big_on"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/courses"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintEnd_toStartOf="@+id/degrees"
                app:layout_constraintStart_toEndOf="@+id/jobs"
                app:srcCompat="@android:drawable/ic_input_add"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/degrees"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/courses"
                app:srcCompat="@android:drawable/ic_delete"
                tools:layout_editor_absoluteY="0dp" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
